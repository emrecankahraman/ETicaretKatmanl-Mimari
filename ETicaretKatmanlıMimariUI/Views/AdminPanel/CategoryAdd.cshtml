@model Entities.Entities.Category
@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<h2>Yeni Kategori Ekle</h2>

<form asp-action="CategoryAdd" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Kategori Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
    <a asp-action="ManageCategory" class="btn btn-secondary">Vazgeç</a>
</form>
