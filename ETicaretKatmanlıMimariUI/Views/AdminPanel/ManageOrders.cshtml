@model IEnumerable<Entities.Entities.Order>
@{
    ViewData["Title"] = "Sipariş Yönetimi";
}

<h2>Sipariş Yönetimi</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Sipariş Numarası</th>
            <th>Kullanıcı Adı</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@order.UserName</td>
                <td>@order.Total</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.orderState</td>
                <td>
                    <a class="btn btn-sm btn-warning"
                       asp-action="OrderUpdate"
                       asp-route-id="@order.Id">Güncelle</a>
                    <form asp-action="DeleteOrder" asp-route-id="@order.Id" method="post" style="display:inline;">
                        <button type="submit"
                                class="btn btn-sm btn-danger"
                                onclick="return confirm('Silmek istediğinize emin misiniz?');">
                            Sil
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
