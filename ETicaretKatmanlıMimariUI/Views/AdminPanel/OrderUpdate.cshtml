@model ETicaretKatmanlıMimariUI.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Sipariş Güncelleme";
}

<h2>Sipariş Güncelleme</h2>

<form asp-action="OrderUpdate" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="OrderNumber" class="form-label"></label>
        <input asp-for="OrderNumber" class="form-control" readonly />
        <span asp-validation-for="OrderNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" readonly />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Total" class="form-label"></label>
        <input asp-for="Total" class="form-control" readonly />
        <span asp-validation-for="Total" class="text-danger"></span>
    </div>

    <!-- Enum dropdown -->
    <div class="mb-3">
        <label asp-for="orderState" class="form-label"></label>
        <!-- Tag helper yardımıyla enum'u dropdown şeklinde gösterir.
             Display(Name="...") attribute'larını da kullanır. -->
        <select asp-for="orderState" asp-items="Html.GetEnumSelectList<Entities.Enum.EnumOrderState>()" class="form-control">
        </select>
        <span asp-validation-for="orderState" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a class="btn btn-secondary" asp-action="ManageOrders">Geri Dön</a>
</form>
