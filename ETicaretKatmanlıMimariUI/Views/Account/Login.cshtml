@model ETicaretKatmanlıMimariUI.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<h2>Giriş Yap</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input type="text" asp-for="UserName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Şifre</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Giriş Yap</button>
</form>

<p>Hesabın yok mu? <a asp-controller="Account" asp-action="Register">Kayıt Ol</a></p>
